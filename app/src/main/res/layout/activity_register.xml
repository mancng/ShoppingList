<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_register_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:src="@mipmap/ic_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/activity_register_userName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:hint="Please Enter Your Username"
        android:background="@color/background_black"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/activity_register_userEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:hint="Please Enter Your Email"
        android:layout_marginTop="15dp"
        android:background="@color/background_black"
        android:drawableLeft="@mipmap/ic_email"
        android:drawableStart="@mipmap/ic_email"/>

    <Button
        android:id="@+id/activity_register_registerButton"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Register"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/activity_register_loginButton"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="Already Registered? Log In"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"/>



</LinearLayout>